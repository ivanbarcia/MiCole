@using eDrago.Resources
@using eDrago.Filters

@{
    var nombreUsuario = ((User as CustomPrincipal) == null ? "" : (User as CustomPrincipal).LastName);
    var fecha = DateTime.Today.Day + "/" + DateTime.Today.Month + "/" + DateTime.Today.Year;
}
