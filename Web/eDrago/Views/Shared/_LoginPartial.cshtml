                @*<li><a href="@Url.Action("Index", "Notification")">Aviso Legal</a></li>*@
                <li class="divider"></li>
                <li>@Html.ActionLink(@Global.LogOut, "Logout", "Login")</li>
            </ul>
        </div>
    }
</div>

